generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @db.Uuid
  username String @unique @db.VarChar(255)
  email    String @unique @db.VarChar(255)
  hash     String @map("password_hash") @db.VarChar(255)

  @@map("users")
}
